<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="API Key"
        android:key="apikey_preference"
        android:summary="Please insert the API Key">
